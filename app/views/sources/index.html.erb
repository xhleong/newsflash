
<p></p>
<br>

<p>List of all sources</p>

<p><%= link_to "Back", admin_index_path %></p>


<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Category</th>
      <th>Source Country</th>
      <th>Source Language</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @sources.order(:code).each do |s| %>
      <tr>
        <td> <%= s.code %> </td>
        <td> <%= s.name %> </td>
        <td> <%= s.category %> </td>
        <td> <%= s.country_code %> </td>
        <td> <%= s.language_code %> </td>
        <td> <%= link_to "Delete", source_path(s), method: :delete, class:"btn btn-sm btn-danger" %> </td>
      </tr>
    <% end %>

  </tbody>

</table>